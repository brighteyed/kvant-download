{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean:kvant",
            "type": "shell",
            "command": "del",
            "args": [
                "/Q", "kvant.json"
            ], 
            "options": 
                {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": [
                            "/d", "/c"
                        ]
                    },

                    "cwd": "${workspaceFolder}"
                },
        },
        {
            "label": "clean:kvantik",
            "type": "shell",
            "command": "del",
            "args": [
                "/Q", "kvantik.json"
            ], 
            "options": 
                {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": [
                            "/d", "/c"
                        ]
                    },

                    "cwd": "${workspaceFolder}"
                },
        }        
    ]
}